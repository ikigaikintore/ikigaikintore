{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":disableRateLimiting",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":prImmediately",
    ":semanticPrefixFixDepsChoreOthers",
    ":updateNotScheduled",
    ":automergeDisabled",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":disableRateLimiting",
    ":rebaseStalePrs",

    "group:recommended",
    "group:monorepos",
    "workarounds:all"
  ],
  "includePaths": [
    "./.github/workflows/*",
    "./backend/*",
    "./frontend/*",
    "./proxy/*",
    "./infra/*"
  ],
  "labels": ["renovate"],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": true,
  "major": {
    "dependencyDashboardApproval": true
  },
  "schedule": [
    "* */2 * * *"
  ],
  "additionalBranchPrefix": "renovate/",
  "prCreation": "immediate",
  "pruneStaleBranches": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "renovate/Major"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "addLabels": [
        "renovate/Patch"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "renovate/Minor"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "renovate/Security"
    ],
    "assignees": ["@ervitis"]
  },
  "rebaseWhen": "conflicted",
  "updateNotScheduled": true,
  "digest": {
    "enabled": false,
  },
  "assigneesFromCodeOwners": true,
  "branchTopic": "{{{depNameSanitized}}}-{{{newMajor}}}{{#if separateMinorPatch}}{{#if isPatch}}-{{{newMinor}}}{{/if}}{{/if}}-x{{#if isLockfileUpdate}}-lockfile{{/if}}"
}
