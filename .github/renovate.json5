// https://docs.renovatebot.com/
{
    includePaths: [
        ".github/workflows/*",
        "./backend/*",
        "./frontend/*",
        "./infra/*",
    ],
    extends: [
        "workarounds:all",
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":ignoreUnstable",
        ":prImmediately",
        ":semanticPrefixFixDepsChoreOthers",
        ":updateNotScheduled",
        ":automergeDisabled",
        ":ignoreModulesAndTests",
        ":autodetectPinVersions",
        ":disableRateLimiting",
        ":rebaseStalePrs",
        "group:recommended",
        "schedule:earlyMondays",
    ],
    labels: [],
    timezone: "Asia/Tokyo",
    packageRules: [
        {
            matchUpdateTypes: ["major"],
            addLabels: ["renovate/Major"],
        },
        {
            matchUpdateTypes: ["patch"],
            addLabels: ["renovate/Patch"],
        },
        {
            matchUpdateTypes: ["minor"],
            addLabels: ["renovate/Minor"],
        },
    ],
    vulnerabilityAlerts: {
        labels: ["renovate/Security"],
        assignees: [],
    },
    updateNotScheduled: true,
    rebaseWhen: "conflicted",
    digest: {
        enabled: false,
    },
    assigneesFromCodeOwners: true,
    branchTopic: "{{{depNameSanitized}}}-{{{newMajor}}}{{#if separateMinorPatch}}{{#if isPatch}}-{{{newMinor}}}{{/if}}{{/if}}-x{{#if isLockfileUpdate}}-lockfile{{/if}}",
}